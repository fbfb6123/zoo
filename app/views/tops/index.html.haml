.header
  .header__left
    =link_to "#" do
      ZOO
  .header__right
    -if user_signed_in? 
      .header__right--left
        = link_to destroy_user_session_path,method: :delete do
          ログアウト
      .header__right--right
        = link_to user_path(current_user.id) do
          マイページ
    -else
      .header__right--left
        =link_to "#" do
          ログイン
      .header__right--right
        =link_to "" do
          新規登録
.main
  .main__first
    .main__first--area
      = link_to "#" do
        エリアから探す
    %ul
      .main__first--zoo
        = link_to "#" do
          NewZOO
          %li.dog
            = link_to dogs_path do
              犬
          %li.cat
            = link_to cats_path do
              猫
    .main__first--ivent
      = link_to "#" do
        イベント情報
    .main__first--view
      = link_to "#" do
        飼い主投稿一覧
  .main__second
    .main__second--name
      new zoo
    .main__second--contents
      - @animal.each do |animal|
        .main__second--contents-content
          = link_to "#" do
            .second_image
              = image_tag animal.image1,height: '130px', width: '180px'
            .second_name
              名前：
              = animal.name
            .second_area
              場所：
              - facility = Facility.find_by(id: animal.facility_id)
              = facility.name
            .second_gender
              性別：
              -if animal.gender == '0'
                男
              -else
                女
