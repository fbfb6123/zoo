=render 'shared/header'
.eventmain
  .eventmain__first
    .eventmain__first--name
      Ivents一覧
    .eventmain__first--contents
      - @event.each_slice(3) do |dog1,dog2,dog3,dog4|
        .eventmains
          .eventmains-content
            = link_to "#" do
              .first_image
                = image_tag dog1.image,height: '130px', width: '300px'
              .first_name
                名前：
                = dog1.name
              .first_area
                場所：
                = dog1.place
          -if dog2.present?
            .eventmains-content
              = link_to "#" do
                .first_image
                  = image_tag dog2.image,height: '130px', width: '300px'
                .first_name
                  名前：
                  = dog2.name
                .first_area
                  場所：
                  = dog2.place
          -if dog3.present?
            .eventmains-content
              = link_to "#" do
                .first_image
                  = image_tag dog3.image,height: '130px', width: '300px'
                .first_name
                  名前：
                  = dog3.name
                .first_area
                  場所：
                  = dog3.place
          -if dog4.present?
            .eventmains-content
              = link_to "#" do
                .first_image
                  = image_tag dog4.image,height: '130px', width: '300px'
                .first_name
                  名前：
                  = dog4.name
                .first_area
                  場所：
                  = dog4.place

  .eventmain__second
    = will_paginate @event, :previous_label => ' &lt 前へ', :next_label => '次へ &gt'
=render 'shared/fotter'