.mainarea
  .mainarea__seach
    = search_form_for @p,as: :p, url:areas_path do |f|
      = f.search_field :name_cont, class: 'group__seach-box'
      = f.submit
  .mainarea__list
    - if @check.present?
      - @categories.each do |categories|
        = link_to "#",class:"group__seach-list-btn" do
          = categories.name